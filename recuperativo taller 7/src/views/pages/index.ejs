<%- include("../partials/header"); %>
<div class="container my-5">
  <div class="row">
    <% if(typeof mensaje !== "undefined") {%>
    <div class="container">
      <div class="row">
        <div class="col-md-8 mb-5 mx-auto">
          <div
            class="alert alert-info alert-dismissible fade show"
            role="alert"
          >
            <p class="text-center"><%= mensaje %></p>
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }%> <% if(!noticias.length){%>
    <p
      class="text-center text-uppercase mx-auto my-5 bg-primary p-2 text-white"
    >
      No hay noticias registradas
    </p>

    <% } %> <% noticias.forEach(noticia=>{ %>
    <div class="col-md-4">
      <div class="card">
        <img
          class="card-img-top"
          src="/upload/<%= noticia.imagen%>"
          alt="Card image cap"
        />
        <div class="card-body">
          <a href="/noticia/<%=noticia._id %>">
            <h5 class="card-title"><%= noticia.titulo %></h5>
          </a>
          <p class="card-text"><%= noticia.descripcion %></p>
          <p class="card-text">
            <small class="text-muted"
              >Fecha Publicaci√≥n: <%= noticia.fecha %></small
            >
          </p>
          <p class="card-text">
            <small class="text-muted">Autor: <%= noticia.autor.nombre %></small>
          </p>
          <a href="/noticia/editar/<%= noticia._id %>" class="btn btn-info mt-2"
            >Editar Noticia</a
          >
          <a
            href="/noticia/eliminar/<%= noticia._id %>"
            class="btn btn-danger mt-2"
            >Eiminar Noticia</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
